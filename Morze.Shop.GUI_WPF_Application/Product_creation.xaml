<Window x:Class="Morze.Shop.GUI_WPF_Application.Product_creation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="Morze.Shop.GUI_WPF_Application.Product_creation"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Product_creation"  MinWidth="420" MinHeight="410" Width="420" Height="410" MaxWidth="420" MaxHeight="410" >
    <Grid Background="#ffdadada">
        <Border MinWidth="300" Margin="9" Background="White" VerticalAlignment="Center" Padding="30"
                MaxHeight="500" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Создание товара" FontSize="20" FontWeight="Bold" HorizontalAlignment ="Center" Margin="0 0 0 10"/>
                <TextBox materialDesign:HintAssist.Hint="Введите название товара" x:Name="textBox_productName" FontSize="15"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 0 45 0"/>
                <materialDesign:PackIcon Kind="RenameBox" Width="30" Height="30" Margin="295 -25 0 0"/>
                <TextBox materialDesign:HintAssist.Hint="Введите цену товара" x:Name="textBox_price" FontSize="15" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 0 45 0"/>
                <materialDesign:PackIcon Kind="Cash100" Width="30" Height="30" Margin="295 -25 0 0"/>
                <TextBox materialDesign:HintAssist.Hint="Введите количества товара" x:Name="textBox_amount" FontSize="15" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 0 45 0"/>
                <materialDesign:PackIcon Kind="PackageVariantClosedAdd" Width="30" Height="30" Margin="295 -25 0 0"/>
                <TextBox materialDesign:HintAssist.Hint="Введите номер клиента" x:Name="textBox_clientID" FontSize="15" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0 0 45 0"/>
                <materialDesign:PackIcon Kind="Identifier" Width="30" Height="30" Margin="295 -25 0 0"/>
                <Grid Margin="0 20 0 0">
                    <Button Content="Создать" Cursor="Hand"/>
                </Grid>
                <Button  Content="Выйти" Click="Button_Click_OutToShop" Style="{StaticResource MaterialDesignFlatButton}" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
